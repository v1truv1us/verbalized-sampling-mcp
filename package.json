{
  "name": "verbalized-sampling-mcp",
  "version": "1.0.0",
  "description": "MCP server for verbalized sampling operations with comprehensive Sentry monitoring",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "verbalized-sampling-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "sentry:test": "node -e \"const Sentry = require('@sentry/node'); Sentry.captureException(new Error('Test error from verbalized-sampling-mcp'));\""
  },
  "keywords": ["mcp", "model-context-protocol", "sentry", "monitoring", "verbalized-sampling", "llm", "diversity", "prompt-engineering", "anthropic", "openai", "gemini"],
  "author": "Ferguson Code",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@sentry/node": "^8.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.3.2",
    "bun": "^1.2.0"
  },
  "engines": {
    "node": ">=18.19.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/johnferguson/verbalized-sampling-mcp"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "bugs": {
    "url": "https://github.com/johnferguson/verbalized-sampling-mcp/issues"
  },
  "homepage": "https://github.com/johnferguson/verbalized-sampling-mcp#readme"
}
